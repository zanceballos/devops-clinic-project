            }
        }

        stage('Build and Test Project') {
            steps {
                // To run Maven on a Windows agent, use
                bat 'mvn clean install --file ClinicJavaWebEE/pom.xml'

                // Archive JUnit formatted test results
                junit '**/surefire-reports/*.xml'
            }
        }
        stage("Deploy"){
            steps{
                deploy adapters: [tomcat8(credentialsId: '09395b42-63bf-414c-9998-2cc5dc3a2621', path: '', url: 'http://localhost:8080/')], contextPath: 'ClinicJavaWebEE', war: '**/*.war'
            }
        }
    }
}